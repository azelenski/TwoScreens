<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FirstScreen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_second_screen"
        android:id="@+id/GoSecondScreenButton"
        android:onClick="GoToSecondScreen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/InputEditText"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_alignBottom="@+id/GoSecondScreenButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/GoSecondScreenButton"
        android:layout_toStartOf="@+id/GoSecondScreenButton"
        android:text="Send a Message" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Enput2EditText"
        android:layout_below="@+id/GoSecondScreenButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:layout_alignRight="@+id/InputEditText"
        android:layout_alignEnd="@+id/InputEditText"
        android:text="I&apos;m second Message" />

</RelativeLayout>
